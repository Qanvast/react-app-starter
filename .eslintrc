{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "__DEV__": true,
        "__SERVER__": true
    },
    "rules": {
        // Strict mode
        "strict": [2, "global"],

        // Code style
        "indent": [4, 4],
        "quotes": [2, "single", "avoid-escape"],
        "no-underscore-dangle": false
    }
}
